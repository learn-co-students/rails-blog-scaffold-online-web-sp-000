<h1>New Post</h1>

<%= form_tag("/posts") do %>
  <%= label_tag('post[title]', "Title") %>
  <%= text_field_tag('post[title]') %>

  <%= label_tag('post[description]', "Description") %>
  <%= text_field_tag('post[description]') %>

  <%= submit_tag "Create Post" %>
<% end %>

<%= link_to 'Back', posts_path %>
